// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// Define the data model
model countries {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  geom      Json?
  created_on DateTime @default(now())
  updated_on DateTime @default(now())

  releases releases[]
}

model artists {
  id        Int      @id
  name      String
  created_on DateTime @default(now())
  updated_on DateTime @default(now())

  // Define relationships
  releases  releases[]
}

model labels {
  id           Int      @id
  name         String
  company_name  String?
  created_on    DateTime @default(now())
  updated_on    DateTime @default(now())

  // Define relationships
  releases     releases[]
}

model releases {
  id        Int      @id
  title     String
  status    String?
  year      String?
  genre     String?
  style     String?
  notes     String?
  created_on DateTime @default(now())
  updated_on DateTime @default(now())

  country  Int?
  label_id Int?
  artist_id Int?

  // Define relationships
  c   countries? @relation(fields: [country], references: [id])
  l     labels?   @relation(fields: [label_id], references: [id])
  a    artists?  @relation(fields: [artist_id], references: [id])
}
